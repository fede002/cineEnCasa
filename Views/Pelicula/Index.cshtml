@model List<cineEnCasaMVC.Entidades.Pelicula>
@{
    ViewData["Title"] = "Listado de peliculas";
}
<div class="container" style="padding-bottom: 100px;">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h3>Salida en Json</h3>
                    <hr>
                    <a href="./json" target="_blanck" class="btn btn-info">Ver salida en Json</a>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="card text-center">
                <div class="card-body">
                    <div class="">
                        <h3 class="float-left" style="margin-top: -12px;" >@ViewData["Title"]</h3>
                        <h5 class="float-right">Cantidad listada: @ViewBag.cantidadPeliculas</h5>
                    </div>
                    <br>
                    <hr>
                    <div class="row lista">
                        @foreach (var p in @Model)
                        {
                            <div class="col-md-2" id="@p.titulo">
                                <div class="card">
                                    <a href="@p.url" target="_blank">
                                        <div class="card-body">
                                            <h6>@p.titulo Rating: @p.puntaje</h6>
                                            <img class="img-fluid" src="@p.imagen" alt="@p.titulo">
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
